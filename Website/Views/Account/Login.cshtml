@model Website.Models.LoginModel

<section class="row">
    @using (Html.BeginForm(new {ViewBag.ReturnUrl}))
    {
        @Html.AntiForgeryToken()

        <div class="panel large-offset-2 large-8 columns">
            <h2>Log in</h2>
            
            @Html.ValidationSummary(true, null, new { @class = "alert-box alert"})

            <div class="row">
                <div class="large-2 columns">
                    @Html.LabelFor(m => m.UserName, new {@class = "right inline"})
                </div>
                <div class="large-10 columns">
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            
            <div class="row">
                <div class="large-2 columns">
                    @Html.LabelFor(m => m.Password, new {@class = "right inline"})
                </div>
                <div class="large-10 columns">
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            
            <div class="row">
                <div class="large-10 large-offset-2 columns">
                    <label for="RememberMe">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            
            <div class="row">
                <div class="large-10 large-offset-2 columns form-actions">
                    <input type="submit" value="Log in" class="button" />
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/js/validate")
}